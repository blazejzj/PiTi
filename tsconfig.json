{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2020"
    ],
    "jsx": "react-jsx",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": [
      "jest",
      "react",
      "react-native",
      "node"
    ],
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "jest.setup.ts",
    "nativewind-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
